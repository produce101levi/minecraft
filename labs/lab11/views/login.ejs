<%- include('includes/head.ejs', {username: username}) %>

<div class="box m-6">
<h1 class="title"><% if(registrar) {%> Registrarse <%} else {%> Iniciar sesión <% } %></h1>
<% if (error) { %> 
    <div class="notification is-danger">
        <strong><%= error %></strong>
    </div>
<% } %>
<form action="/user/<% if(registrar) { %>login<% }else { %>signup <% } %>" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
    <label class="label" for="username">Nombre de usuario</label>
    <input name="username" id="username" type="text" class="text"><br>
    <label class="label" for="password">Contraseña</label>
    <input name="password" id="password" type="password" class="text"><br><br>
    <input class="button is-danger" type="submit" value="<% if(registrar){ %>Registrarse <% } else { %> Iniciar sesión <% }%>">
</form>

<% include ('includes/foot.ejs') %>